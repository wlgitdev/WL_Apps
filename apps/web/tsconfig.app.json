{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist", // Add this
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@context/*": [
        "src/context/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@wl-apps/types": [
        "../../packages/types/src"
      ],
      "@wl-apps/types/*": [
        "../../packages/types/src/*"
      ],
      "@wl-apps/utils": [
        "../../packages/utils/src"
      ],
      "@wl-apps/utils/*": [
        "../../packages/utils/src/*"
      ],
      "@wl-apps/schema-to-ui": [
        "../../packages/schema-to-ui/src"
      ],
      "@wl-apps/schema-to-ui/*": [
        "../../packages/schema-to-ui/src/*"
      ],
      "@wl-apps/pf": [
        "../../packages/pf/src"
      ],
      "@wl-apps/pf/*": [
        "../../packages/pf/src/*"
      ],
      "@wl-apps/sortify": [
        "../../packages/sortify/src"
      ],
      "@wl-apps/sortify/*": [
        "../../packages/sortify/src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/schema-to-ui"
    },
    {
      "path": "../../packages/pf"
    },
    {
      "path": "../../packages/sortify"
    },
  ]
}