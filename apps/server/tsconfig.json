{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "composite": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@wl-apps/types": ["../../packages/types/src"],
      "@wl-apps/utils": ["../../packages/utils/src"]
    }
  },
  "references": [
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/utils"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
